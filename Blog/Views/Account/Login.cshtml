
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <hr />
    <div align="center"><h2>Авторизация</h2></div>
    
    <hr />

    <form class="form-horizontal" role="form" method="post">
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-4 control-label">Логин</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="inputEmail3" name="userName" placeholder="Login" style="max-width:300px;">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-4 control-label">Пароль</label>
            <div class="col-sm-8">
                <input type="password" class="form-control" id="inputPassword3" name="password" placeholder="Password" style="max-width:300px;">
            </div>
        </div>
        <div class="col-sm-offset-4 col-sm-8">
            <button type="submit" class="btn btn-default">Войти</button>
        </div>
        <div class="form-group">
            <div class="col-md-offset-6 col-md-6">
                <div class="checkbox">
                    <label for="RememberMe">Запомнить меня</label>
                    <input type="checkbox" name="RememberMe" id="RememberMe" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-6 col-md-6">

                <a href="@Url.Action("ForgotPassword","Account")">Забыли пароль</a>

            </div>
        </div>
        <div class="form-group">
            
        </div>
    </form>
</div>