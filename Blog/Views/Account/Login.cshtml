
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}
<div class="container">

    <form class="form-horizontal" role="form" method="post" style="margin-top:150px;">
        <div align="center"><h2>Авторизация</h2></div>
        <div class="line_1"style="margin-bottom:25px;"></div>
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-4 control-label">Логин</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="inputEmail3" name="userName" placeholder="Login" style="max-width:300px;">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-4 control-label">Пароль</label>
            <div class="col-sm-8">
                <input type="password" class="form-control" id="inputPassword3" name="password" placeholder="Password" style="max-width:300px;">
            </div>
        </div>
        <div class="form-actions col-md-offset-4 col-md-8">
            <button type="submit" class="btn btn-info uppercase">Войти</button>
            <label  for="RememberMe" class="rememberme check" style="margin-right:10px;margin-left:5px;">
               <span><input type="checkbox" name="RememberMe"  id="RememberMe"></span> Запомнить меня
            </label>
            <a href="@Url.Action("ForgotPassword","Account")">Забыли пароль</a>
        </div>
      <br />
        <div class="create-account">
            <p>
                <a href="@Url.Action("Register","Account")" id="register-btn" class="uppercase col-md-offset-5 col-md-7 " style="margin-top:10px;"><h3>Создать аккаунт</h3></a>
            </p>
        </div>
        <div class="line_1" style="margin-top:25px;"></div>
    </form>
</div>