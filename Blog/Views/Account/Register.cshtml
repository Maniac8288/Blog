
@{
    ViewBag.Title = "Регистрация";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<p style="color:red;"> @ViewData["Message"] </p>
<div class="container">
    <form class="form-horizontal" role="form" method="post" id="form" style="margin-top:150px;">
        <div align="center"><h2>Регистрация</h2></div><hr />
        <div class="form-group">
            <label for="login" class="col-sm-4 control-label">Логин</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" id="login" name="userName" required placeholder="Login" style="max-width:300px;">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-4 control-label">Пароль</label>
            <div class="col-sm-6">
                <input type="password" class="form-control" id="pass1" name="pw1" required placeholder="Password" style="max-width:300px;">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-4 control-label">Подтверждение пароля</label>
            <div class="col-sm-6">
                <input type="password" class="form-control" id="pass2" name="pw2" required placeholder="Password" style="max-width:300px;">
            </div>
        </div>
        <div class="form-group">
            <label for="dateAddPost" class="col-sm-4 control-label">E-mail</label>
            <div class="col-sm-6">
                <input type="email" class="form-control" name="EMail" id="EMail" style="max-width:300px;" />
            </div>
        </div>
        <div class="form-group">
            <label for="dateAddPost" class="col-sm-4 control-label">Дата рождения</label>
            <div class="col-sm-6">
                <input type="date" class="form-control" name="dataBird" id="dataBird" style="max-width:300px;" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-6">
                <button type="submit" class="btn btn-default" id="button">Регистрация</button>
            </div>
        </div>
    </form>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
    $(function () {
        $('[type=button]').click(function () {
            if (($('#login').val().length) < 4) {
                $('#login').attr("data-original-title", "Не менее 4 символов");
                $('#login').tooltip('show');
            }
            else if ($('#pass1').val().length < 5) {
                $('#login').tooltip('hide');
                $('#pass1').attr("data-original-title", "Не менее 5 символов");
                $('#pass1').tooltip('show');
            }
            else if ($('#pass2').val().length < 5) {
                $('#pass2').attr("data-original-title", "Не менее 5 символов");
                $('#pass2').tooltip('show');
            }
            else if ($('#pass1').val() != $('#pass2').val()) {
                $('#pass1').attr("data-original-title", "Пароли не совпадают");
                $('#pass2').attr("data-original-title", "Пароли не совпадают");
                $('#pass1').tooltip('show');
                $('#pass2').tooltip('show');
            }
            else alert("Регестрация успешна завершена");
                $('#form').submit();

            })
        });


    </script>
}
