
@{
    ViewBag.Title = "NewPassword";
}

<div>
    <h3 class="site-title text-center">Востоновление пароля</h3>
    <br />
    <form class="form-horizontal" role="form" method="post">

        <div class="form-group">
            <label for="inputEmail3" class="col-sm-4 control-label">Введите новый пароль</label>
            <div class="col-sm-6">
                <input type="password" class="form-control" id="password" name="password" placeholder="Введите пароль" style="max-width:300px;">
            </div>
        </div>
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-4 control-label">Потвердите пароль</label>
            <div class="col-sm-6">
                <input type="password" class="form-control" id="password2" name="password2" placeholder="Потвердите пароль" style="max-width:300px;">
            </div>
        </div>


        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Сохранить</button>
            </div>
        </div>
    </form>
</div>