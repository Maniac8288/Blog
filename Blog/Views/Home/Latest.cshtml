@model IEnumerable<IServices.Models.Post.ModelPostPreview>
@{
    Layout = null;
}

<aside>
    <div class="sidebar_title_1" style="font-weight:bold;">Популярные посты</div>

    <div class="block_sidebar_popular_posts">
   @foreach (var lastPost in Model)
   {
        <article>
            <div class="image"><a href="@Url.Action("Post","Home", new { id = lastPost.PostID })"><img src="~/img/@lastPost.PostID/Preview/@lastPost.upload" alt="@lastPost.NamePost" width="86" height="66"></a></div>

            <div class="content">
                <div class="title">
                    <a href="blog_post.html">@lastPost.Description</a>
                </div>

                <div class="info">
                    <div class="tags"><a href="#">@lastPost.CategoryId</a>, <a href="#">@lastPost.NamePost</a></div>
                    <div class="date">27, 2013</div>
                </div>
            </div>
        </article>
   }
    </div>
</aside>