@model IEnumerable<IServices.Models.Post.ModelPostPreview>
@{
    Layout = null;
}

<div class="tab-pane active" id="widget-tab-popular">
    <ul>
            @foreach(var lastPost in Model )
            {
                
            <li class="clearfix">
                <div class="widget-entry-thumbnail">
                    <a href="@Url.Action("Post","Home", new { id = lastPost.PostID })" title="Markup: Image Alignment"><img width="50" height="50" src="~/img/@lastPost.PostID/Preview/@lastPost.upload" class="attachment-thumb-small size-thumb-small wp-post-image" alt="" title="Markup: Image Alignment"></a>
                </div>
                <div class="widget-entry-summary">
                    <h4><a href="@Url.Action("Post","Home", new { id = lastPost.PostID })" title="Markup: Image Alignment" rel="bookmark">@lastPost.NamePost</a></h4>
                    <span>@lastPost.dateAddPost</span>
                </div>
            </li>

            }
        </ul>
</div>

