@model IServices.Models.Post.ModelCategories
@{
    Layout = null;
}



        <div class="block_bottom_menu">

            <nav>
                <ul>
                    @foreach (var categories in Model.GetParents())
                    {
                        <li>
                            <a href="index.html">@categories.Name</a>

                            <ul>
                                @foreach (var Child in Model.GetChild(categories.Id))
                                {
                                    <li class="current_page_item"><a href="index.html">@Child.Name</a></li>
                                }
                            </ul>
                        </li>
                    }
                </ul>
            </nav>
            </div>


