                                        <tr class="gradeX odd" role="row">
                                            <td>
                                                <input type="checkbox" class="checkboxes" value="@item.Id" name="Select">
                                            </td>
                                            <td class="sorting_1">
                                                @item.UserName
                                            </td>
                                            <td>

                                                @item.Email

                                            </td>
                                            <td>
                                                @item.LastVisit
                                            </td>
                                            <td class="center">
                                                @item.Role
                                            </td>
                                            <td>
                                                <span class="label label-sm label-success">
                                                    @item.Status
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>

                            </table>


                        </div>
                        <button act name="Delete" value="Удалить" class="btn btn-danger" onclick="location.href='@Url.Action("Delete", "Admin")'">Удалить</button>
