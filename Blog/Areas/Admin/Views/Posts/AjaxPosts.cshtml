@model IEnumerable<IServices.Models.Post.ModelPostPreview>
@{
    Layout = null;
}
<div class="col-md-10">
    <!-- BEGIN EXAMPLE TABLE PORTLET-->
    <div class="portlet box purple">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-cogs"></i>Управление постами
            </div>
            <div class="actions">
                <a href="NewPost" class="btn btn-default btn-sm" title="Добавить пост">
                    <i class="fa fa-plus"></i> Добавить пост
                </a>
                <a href="javascript:;" class="btn btn-default btn-sm" id="deletePost" title="Удалить пост">
                    <i class="fa fa-minus"></i> Удалить пост
                </a>

            </div>
        </div>
        <div class="portlet-body">
            <table class="table table-striped table-bordered table-hover" id="sample_3">
                <thead>
                    <tr>
                        <th class="table-checkbox">

                        </th>
                        <th>
                            Название поста
                        </th>
                        <th>
                            Категория поста
                        </th>
                        <th>
                            Дата создания поста
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var post in Model)
                    {
                        <tr class="odd gradeX">
                            <td>
                                <span><a href="@Url.Action("EditPost","Admin", new { id = post.PostID })"><i class="fa fa-cogs" title="Редактировать пост"></i> </a></span>
                            </td>

                            <td>
                                <a href="@Url.Action("EditPost","Admin", new { id = post.PostID })" title="Редактировать пост" id="deletePost">
                                    @post.NamePost
                                </a>
                            </td>

                            <td>
                                @post.CategoryId

                            </td>
                            <td>
                                @post.dateAddPost.ToLongDateString()
                            </td>
                            <td>

                                <span class="glyphicon glyphicon-trash">
                                </span>


                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- END EXAMPLE TABLE PORTLET-->
</div>
<script>
        $(document).ready(function () {
            $('#deletePost').click(function () {
                var data = new FormData();
                var list = $('#check').attr("name");
                var listVal = $('#check').attr("value");
                values = $("input[name=list]").map(function () {
                    if ($(this)[0].checked) {
                        return $(this).val();
                    }

                }).get();
                data.append("list", values);
                $.ajax({
                    url: 'DeletePosts',
                    type: 'post',
                    contentType: false,
                    processData: false,
                    data: data,
                    beforeSend: function () { console.log(values); },
                    success: function (data) {
                        upPosts();
                        console.log(data);
                    }
                });
            });

            function upPosts() {

                $('#PanelPosts').load("@Url.Action("AjaxPost","Post")");
            };
        });
</script>
