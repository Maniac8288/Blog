@model IEnumerable<IServices.Models.Post.ModelPostPreview>
@{
    Layout = null;
}
<div class="col-md-10">
    <!-- BEGIN EXAMPLE TABLE PORTLET-->
    <div class="portlet box purple">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-cogs"></i>Управление постами
            </div>
            <div class="actions">
                <a href="NewPost" class="btn btn-default btn-sm">
                    <i class="fa fa-plus"></i> Добавить пост
                </a>
                <a href="javascript:;" class="btn btn-default btn-sm" id="deletePost">
                    <i class="fa fa-minus"></i> Удалить пост
                </a>
                <a href="javascript:;" class="btn btn-default btn-sm">
                    <i class="fa fa-cogs"></i> Редактировать пост
                </a>
            </div>
        </div>
        <div class="portlet-body">
            <table class="table table-striped table-bordered table-hover" id="sample_3">
                <thead>
                    <tr>
                        <th class="table-checkbox">
                            <input type="checkbox" class="group-checkable" data-set="#sample_3 .checkboxes" />
                        </th>
                        <th>
                            Название поста
                        </th>
                        <th>
                            Категория поста
                        </th>
                        <th>
                            Дата создания поста
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var post in Model)
                    {
                        <tr class="odd gradeX">
                            <td>
                                <input type="checkbox" class="checkboxes" value="@post.PostID" name="list" id="check" />
                            </td>
                            <td>
                                @post.NamePost
                            </td>
                            <td>


                                @post.selectedCategory.Name


                            </td>
                            <td>

                                @post.dateAddPost

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- END EXAMPLE TABLE PORTLET-->
</div>
<script>
        $(document).ready(function () {
            $('#deletePost').click(function () {
                var data = new FormData();
                var list = $('#check').attr("name");
                var listVal = $('#check').attr("value");
                values = $("input[name=list]").map(function () {
                    if ($(this)[0].checked) {
                        return $(this).val();
                    }

                }).get();
                data.append("id", values);
                $.ajax({
                    url: 'DeletePosts',
                    type: 'post',
                    contentType: false,
                    processData: false,
                    data: data,
                    beforeSend: function () { console.log(values); },
                    success: function (data) {
                        upPosts();
                        console.log(data);
                    }
                });
            });
            function upPosts() {

                $('#PanelPosts').load("http://localhost:62712/Admin/Admin/upPosts");
            };
        });
</script>

